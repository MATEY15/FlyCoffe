.article--help
	padding 60px 70px
	transition all .3s ease-out
	&:hover
		background rgba(0, 0, 0, 0.2)
		box-shadow 0px 4px 30px 10px rgba(0, 0, 0, 0.45)
	.article
		&_title
			fz: 22px
			lh: 33px
			ls: 0
			txtt: none
			ffa fPro
		&_comment
			mt: 50px
			min-height: 70px

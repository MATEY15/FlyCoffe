.section--hero
	background url(../img/bg-white.png)
	min-height 100vh
	position: relative

	.section
		&_content
			position: relative
			z-index 4
			pt: 262px

		&_bg
			z-index 1
			baa()
			position absolute 0
			size: 100%
			overflow hidden
			
			.section_bg-main
				position relative
				size: 65% 100%
				background linear-gradient(to right,#0c0b0b 0,#101010 60%)
			
			.section_bg-radius
				left: 60%
				top: -20%
				size: 9% 150%
				border-radius 50%
				background linear-gradient(to right,#101010 0,#101010 60%)
				overflow hidden
			
			.section_bg-main,
			.section_bg-radius
				position absolute
				&:before
					position: absolute;
					top: 0;
					left: 0;
					content: "";
					display: block;
					width: 100%;
					height: 100%;
					background-image: url(../img/Noise.png);
					mix-blend-mode: overlay;
					opacity: .4;


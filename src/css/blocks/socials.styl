.socials
	&_social
		mt: 24px;
		&:first-child
			mt: 0

.social
	position absolute
	display: block
	size 40px
	background #1e1e1e
	border-radius: 50%
	position relative
	border 1px solid transparent
	transition all .3s ease-out
	
	&:hover
		background #fff
		border 1px solid #1e1e1e
		
		svg
			fill #050505

	svg
		fill #7d7d7d
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		transition all .3s ease-out
		&.vk-svg
			width 18px

		&.instagramm-svg
			width 16px
		
		&.facebook-svg
			width 16px

	&_icon
		max-width 20px
		max-height 20px
		position absolute 0
		margin auto
		display: block
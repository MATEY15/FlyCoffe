.section--team
	min-height: height("bg-team.png")
	position relative
	display: flex
	flex-direction: column
	justify-content: flex-end
	mt: -300px
	
	.bg-team
		position absolute
		top 0
		left 0
		display block
		width 100%
		height 100%
		background: url('../img/bg-team.png')
		background-position center 0
		background-size contain
		min-height: height("bg-team.png")
		background-repeat no-repeat
		opacity: .6

	.section
		&_row
			mb: 60px
			display: flex
			align-items: center
		&_title
			mb: 37px
		&_stamp
			ml: 70px
			mt: 60px
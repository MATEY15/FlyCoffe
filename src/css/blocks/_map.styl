.form_map
	position absolute
	top 50%
	right -300px
	width 890px
	height 890px
	border 15px solid #fff
	border-radius 50%
	background-image: url(../img/map.jpg)
	background-position center
	transform translate(0, -50%)
	overflow hidden
	z-index 10
	&-icon
		position absolute
		top 50%
		left 50%
		width 82px
		height 99px
		background-image: url(../img/ic-map-icon.png)
		transform translate(-50%, -50%)

#map-form
	width 890px
	height 890px		